<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
    <h1> <%= @post.title %></h1>
  </header>

  <hr>

  <h2> Bushwick Waistcoat </h2>

  <div id="content">
    <%= markdown @post.content %>
  </div>

  <hr>

  <div id="share_box">
    <p>Share The DO List</p>
    <!-- Twiiter -->
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by
      @serena_stater - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800,
      height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
    <!-- Facebook -->
    <a onclick="javascript:window.open('http://facebook.com/sharer.php?u=<%= url_for([@post, {
      only_path:false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i
      class="fa fa-facebook"></i></a>
    <!-- Google Plus -->
    <a onclick="javscript:window.open('http://plus.google.com/share?url=<%= url_for([@post, {
      only_path: false}]) %>', _blank', 'width=800, height= 500, top=200, left=300');void(0);">
      <i class="fa fa-google-plus"></i></a>
  </div>

  <hr>

</div>

<%= link_to "Edit", edit_post_path(@post) %>
